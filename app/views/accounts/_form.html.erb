<%= bootstrap_form_for(account) do |f| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :role, disabled: true %>
  </div>

  <div class="field">
    <%= f.text_field :state, disabled: true %>
  </div>

  <div class="field">
    <%= f.text_field :location, disabled: false %>
  </div>

  <h2>Categorias</h2>
      <% @categories.each do |category| %>
      <div class="field">
        <%= check_box_tag "categories[]", category.id %> <%= category.name %>
      </div>
      <%end%>
  <br>

  <div class="actions">
    <%= f.submit "Actualizar cuenta", :class => 'btn btn-md btn-primary'%>
  </div>
  <br>
<% end %>
