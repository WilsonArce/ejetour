<div class="container">
<h1>Olvidaste tu contraseña?</h1>
  <div class="row">
    <div class="col-md-5 col-centered" align="left" style="font-size: 1.1em;">
	<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="field">
	    <%= f.email_field :email, autofocus: true %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Envíame instrucciones para reestablecer mi contraseña", :class => 'btn btn-md btn-primary'%>
	  </div>
	<% end %>
	<br>
	<%= render "devise/shared/links" %>
	</div>
  </div>
</div>
