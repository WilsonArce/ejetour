<div class="container">
  <h1>Regiones</h1>
  <% if current_account.role == "admin" %>
    <%= link_to 'Nueva region', new_region_path %>
  <%end%>
  <br><br>
  <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-condensed table-bordered">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Descripci√≥n</th>
              <!--th>Imagen</th-->
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @regions.each do |region| %>
              <tr>
                <td><%= region.nombre %></td>
                <td><%= region.descripcion %></td>
                <!--td><%= region.imagen %></td-->
                <td><%= link_to 'Ir', region %></td>
                <% if current_account.role == "admin" %>
                <td><%= link_to 'Editar', edit_region_path(region) %></td>
                <td><%= link_to 'Eliminar', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                <%end%>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
